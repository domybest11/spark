<!-- Put site-specific property overrides in this file. -->
<configuration>
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>

  <!--memory configuration-->
  <property>
    <name>yarn.app.mapreduce.am.resource.mb</name>
    <value>4096</value>
  </property>
  <property>
    <name>yarn.app.mapreduce.am.command-opts</name>
    <value>-Xmx3276m</value>
  </property>
  <property>
    <name>mapreduce.reduce.memory.mb</name>
    <value>4096</value>
  </property>
  <property>
    <name>mapreduce.reduce.java.opts</name>
    <value>-Xmx3276m</value>
  </property>
  <property>
    <name>mapreduce.map.memory.mb</name>
    <value>4096</value>
  </property>
  <property>
    <name>mapreduce.map.java.opts</name>
    <value>-Xmx3276m</value>
  </property>

  <!--shuffle configuration-->
  <property>
    <name>mapreduce.shuffle.port</name>
    <value>35656</value>
  </property>
  <property>
    <name>mapreduce.reduce.shuffle.connect.timeout</name>
    <value>30000</value>
  </property>
  <property>
    <name>mapreduce.reduce.shuffle.read.timeout</name>
    <value>30000</value>
  </property>
  <property>
    <name>mapreduce.shuffle.listen.queue.size</name>
    <value>256</value>
  </property>
  <property>
    <name>mapreduce.shuffle.transfer.buffer.size</name>
    <value>524288</value>
  </property>
  <property>
    <name>mapreduce.shuffle.readahead.bytes</name>
    <value>8388608</value>
  </property>
  <property>
  <name>mapreduce.shuffle.max.connections</name>
  <value>10000</value>
  </property>
  <property>
    <name>mapreduce.task.io.sort.mb</name>
    <value>1638</value>
  </property>
  <property>
    <name>mapreduce.task.io.sort.factor</name>
    <value>100</value>
  </property>
  <property>
    <name>mapreduce.map.output.compress</name>
    <value>true</value>
  </property>
  <property>
    <name>mapreduce.map.output.compress.codec</name>
    <value>com.hadoop.compression.lzo.LzoCodec</value>
  </property>
  <property>
    <name>mapred.child.env</name>
    <value>LD_LIBRARY_PATH=/data/sdk/lzo/lib</value>
  </property>
  <property>
    <name>mapreduce.jobhistory.address</name>
    <value>10.69.1.34:10020</value>
  </property>

  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value>10.69.1.34:19090</value>
  </property>

  <property>
    <name>mapreduce.reduce.shuffle.parallelcopies</name>
    <value>20</value>
  </property>


  <!--每个任务默认的副本数 默认为4 减少后任务失败没有可选的副本使用会直接报错 -->
  <property>
    <name>mapreduce.map.maxattempts</name>
    <value>10</value>
  </property>
  <property>
    <name>mapreduce.reduce.maxattempts</name>
    <value>10</value>
  </property>
  <property>
    <name>mapreduce.cluster.local.dir</name>
    <value>/mnt/storage00/mapreduce</value>
  </property>

  <!--让所有的reduce任务等待map阶段全部完成后再开始执行-->
  <property>
    <name>mapreduce.job.reduce.slowstart.completedmaps</name>
    <value>1</value>
  </property>
  <property>
    <name>mapreduce.input.fileinputformat.split.minsize</name>
    <value>1073741824</value>
  </property>
  <property>
    <name>mapreduce.job.jvm.numtasks</name>
    <value>10</value>
  </property>

  <!-- security config -->
  <property>
    <name>mapreduce.jobhistory.principal</name>
    <value>jhs/_HOST@BILIBILI.CO</value>
  </property>

  <property>
    <name>mapreduce.job.counters.max</name>
    <value>256</value>
  </property>

  <property>
    <name>mapreduce.job.counters.max.resource.enable</name>
    <value>true</value>
  </property>
  <property>
    <name>yarn.app.mapreduce.am.metric.enable</name>
    <value>true</value>
  </property>
  <property>
    <name>yarn.app.mapreduce.used.max.resource.collection.enable</name>
    <value>true</value>
  </property>
  <property>
    <name>mapreduce.task.metrics.gc.collection.enable</name>
    <value>true</value>
  </property>
</configuration>
